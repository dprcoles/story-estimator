generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type Vote {
  playerId String @db.ObjectId
  vote     String
}

model players {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  defaultType String
  emoji       String
  name        String
}

model sessions {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  playerIds String[] @db.ObjectId
  storyIds  String[] @db.ObjectId
  teamId    String?  @db.ObjectId
}

model stories {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  description   String
  finalEstimate String
  spectatorIds  String[] @db.ObjectId
  timeSpent     String
  voterIds      String[] @db.ObjectId
  votes         Vote[]
}

model teams {
  id   String @id @default(auto()) @map("_id") @db.ObjectId
  name String
}
