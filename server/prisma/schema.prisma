generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type Vote {
  playerId String  @db.ObjectId
  vote     String?
}

type JqlQuery {
  id    String @db.ObjectId 
  name  String
  query String
}

model players {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  defaultType String
  emoji       String
  name        String
}

model sessions {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  playerIds String[] @db.ObjectId
  storyIds  String[] @db.ObjectId
  teamId    String?  @db.ObjectId
}

model stories {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  description    String
  estimate       String?
  spectatorIds   String[] @db.ObjectId
  startSeconds   Int?
  endSeconds     Int?
  totalTimeSpent Int?
  voterIds       String[] @db.ObjectId
  votes          Vote[]
  sessionId      String   @db.ObjectId
}

model teams {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  name              String
  jiraIntegrationId String? @db.ObjectId
}

model jira_integrations {
  id             String     @id @default(auto()) @map("_id") @db.ObjectId
  apiToken       String
  configuredById String     @db.ObjectId
  domain         String
  email          String
  jqlQueries     JqlQuery[]
}
